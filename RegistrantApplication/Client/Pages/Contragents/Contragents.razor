@page "/contragents"
@inject HttpClient Http

@using RegistrantApplication.Client.Pages.Contragents.Modals;
@using RegistrantApplication.Shared.API;
@using RegistrantApplication.Shared.Contragents;


<button @onclick="() => ModelCreate.Open()" class="inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-3 py-2 text-sm font-medium leading-4 text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Добавить контрагента</button>
<ModalCreate @ref="ModelCreate" />

<h1>@Page</h1>
<div class="mt-0 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
            <table class="min-w-full divide-y divide-gray-300">
                <thead>
                    <tr>
                        <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6 md:pl-0">Идентификатор</th>
                        <th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900">Название контрагента</th>
                        <th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900">Дата создания</th>
                        <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6 md:pr-0">
                            <span class="sr-only">Edit</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">

                    @if (ViewData.Contragents == null)
                    {
                        <tr>
                            <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6 md:pl-0">Загрузка</td>
                            <td class="whitespace-nowrap py-4 px-3 text-sm text-gray-500">Загрузка</td>
                            <td class="whitespace-nowrap py-4 px-3 text-sm text-gray-500">Загрузка</td>
                            <td class="whitespace-nowrap py-4 px-3 text-sm text-gray-500">Загрузка</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in ViewData.Contragents)
                        {
                            <tr>
                                <td class="whitespace-nowrap py-4 px-3 text-sm text-gray-500">@item.IdContragent</td>
                                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6 md:pl-0">@item.Title</td>
                                <td class="whitespace-nowrap py-4 px-3 text-sm text-gray-500">@item.DateTimeCreated</td>
                                <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6 md:pr-0">
                                    <a href="#" class="text-indigo-600 hover:text-indigo-900">Edit<span class="sr-only">, Lindsay Walton</span></a>
                                </td>
                            </tr>

                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

<nav class="flex items-center justify-between border-t border-gray-200 bg-white px-4 py-3 sm:px-6" aria-label="Pagination">
    <div class="hidden sm:block">
        <p class="text-sm text-gray-700">
            Показана
            <span class="font-medium">@ViewData.CurrentPage</span>
            из
            <span class="font-medium">@ViewData.TotalPages</span> страниц. Всего 
            <span class="font-medium">@ViewData.TotalRecords</span>
            записей
        </p>
    </div>
    <div class="flex flex-1 justify-between sm:justify-end">
        <a @onclick="BackPage" class="relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">Предыдущая</a>
        <a @onclick="NextPage" class="relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">Следующая</a>
    </div>
</nav>

@code {
    [Parameter][SupplyParameterFromQuery] public int Page { get; set; }
    [Parameter][SupplyParameterFromQuery] public bool ShowDeleted { get; set; }

    public ViewContragents ViewData;

    public ModalCreate ModelCreate { get; set; } = new ModalCreate();


    protected override async Task OnInitializedAsync()
    {
        ViewData = await DoRequest();
    }

    public async void NextPage()
    {
        Page++;
        ViewData = await DoRequest();
        StateHasChanged();
    }

    public async void BackPage()
    {
        Page--;
        ViewData = await DoRequest();
        StateHasChanged();
    }

    public async Task<ViewContragents> DoRequest()
    {
        return await Http.GetFromJsonAsync<ViewContragents>($"Contragents/Get?page={Page}&showDeleted={ShowDeleted}");
    }
}
